---
import logo from "/capy.webp";
---

<header class="header">
  <div class="container">
    <div class="logo">
      <a href="/">
        <img src={logo} alt="" />
      </a>
    </div>
    <nav>
      <ul>
        <!-- <li><a href="/">Home</a></li> -->
        <!-- <li><a href="/blog">Blog</a></li> -->
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    height: 70px;
    background: var(--accent-gradient);
  }
  .header .container {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
  }
  .header img {
    height: 35px;
    vertical-align: middle;
  }
  .header nav ul {
    display: flex;
  }
  .header nav ul li {
    padding: 0 10px;
  }
</style>
